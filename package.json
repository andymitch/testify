{
  "private": true,
  "workspaces": [
    "project-a",
    "project-b"
  ],
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "test:project-a": "npm run test --workspace=project-a",
    "test:project-b": "npm run test --workspace=project-b"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
